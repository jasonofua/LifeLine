<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.root.lifeline.Activities.HospitalsAroundYou"
    tools:showIn="@layout/activity_hospitals_around_you">

    <TextView
        android:id="@+id/empty"
        android:layout_width="wrap_content"
        android:text="Oops! seems like there are hospitals around your location, click on the button to try again"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Hospitals"
        android:visibility="gone"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
