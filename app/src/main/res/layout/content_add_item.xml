<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.root.lifeline.Activities.AddItemActivity"
    tools:showIn="@layout/activity_add_item">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/enterNewListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_name_for_item"
            android:inputType="textCapWords"
            android:textColorHint="?attr/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtstep"
        android:layout_below="@+id/txtList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <EditText
            android:id="@+id/enterSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Step For First Aid "
            android:inputType="textCapWords"
            android:textColorHint="?attr/colorPrimaryDark"
            android:layout_marginBottom="20dp"/>

    </android.support.design.widget.TextInputLayout>





</RelativeLayout>
